	<h1>Editing Book</h1>

	<%= form_with model:@book, local:true  do |f| %>
	<%= render 'layouts/error_messages', book: @book %>

		<div class="field">
			<label for="title">Title</label>
			<%= f.text_field :title %>
		</div>

		<div class="field">
			<label for="body">Body</label>
			<%= f.text_area :body %>
		</div>

		<div class="actions">
		    <%= f.submit 'Update Book' %>
		</div>

	<% end %>
	<%= link_to 'Show', book_path %> |
	<%= link_to 'Back', books_path %>
